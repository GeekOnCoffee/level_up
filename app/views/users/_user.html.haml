.row.jumbotron
  .col-lg-2
    = gravatar_image_tag(user.email, alt: user.name, class: "gravatar", gravatar: { size: 160 })

  .col-lg-5
    %h3= user.name

    = render partial: 'enrolled_courses', locals: { user: user }
    = render partial: 'recent_activity', locals: { user: user }

  .col-lg-5.skills
    = render partial: 'progress', locals: { user: user }

